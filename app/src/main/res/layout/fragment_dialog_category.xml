<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dailog_white"
    android:orientation="vertical"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="1dp"/>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Select a category"
            android:textSize="20sp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/choose11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Running Shoes"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/choose12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walking Shoes"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/add_product12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandals"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/add_product123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Busuness Shoes"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</LinearLayout>